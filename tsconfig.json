{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@lib/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "typeRoots": ["node_modules/@types", "src/**/*.d.ts", "node_modules"],
    "types": ["node", "vitest/globals", "vite/client"]
  },
  "include": [
    "env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./scripts/**/*.ts",
    "./histoire/**/*.ts",
    "./histoire/**/*.vue",
    "scripts/create-component.ts"
  ],
  "exclude": ["node_modules", "./scripts/*.ts"]
}
